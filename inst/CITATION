  volume       = "77",
  pages        = "1--14",

  textVersion  =
  paste("Fusco E., Vidoli F., Sahoo B.K. (2018)",
        "Spatial heterogeneity in composite indicator: a methodological proposal",
        "Omega",
        "Vol. 77, pp. 1-14")
)

