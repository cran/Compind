  title        = "Non-compensability in composite indicators: a robust directional frontier method",
  author       = personList(as.person("Francesco Vidoli"),
                   as.person("Elisa Fusco")),
  journal      = "Social Indicators Research",
  year         = "2015",
  volume       = "122",
  number       = "3",
  pages        = "635--652",

  textVersion  =
  paste("Vidoli F., Fusco E., Mazziotta C. (2015)",
        "Non-compensability in composite indicators: a robust directional frontier method",
        "Social Indicators Research",
        "Vol. 122, Issue 3, pp. 635-652")
)

